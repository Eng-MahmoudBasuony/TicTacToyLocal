<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimary"
        android:orientation="vertical"

                        >
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:layout_gravity="center"
    >

   <Button
           android:id="@+id/btnStartNewGames"
           android:text="Start New Game"
           android:layout_width="150dp"
           android:padding="5dp"
           android:layout_height="60dp"
           android:textColor="@color/itemO"
           android:background="@drawable/button_start"
           android:textStyle="bold"
           android:textAllCaps="false"
           android:visibility="invisible"
   />

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
    >

        <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                   android:text="Player 1"
                  android:textColor="@android:color/background_light"
                  android:textSize="25sp"
            />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:fontFamily="cursive"
                android:textSize="55sp"
                android:textStyle="bold"
                android:text="X"
                android:textColor="@color/itemX"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textColor="@android:color/background_light"
                android:textSize="25sp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textColor="@color/itemO"
                android:textSize="55sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
        />


    </LinearLayout>

    <TableLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:background="@color/colorPrimary"
         android:layout_gravity="center_horizontal"
    >

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
        >

            <Button
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu1"
                    android:background="@drawable/buttons"
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:onClick="buSelect"
                    android:fontFamily="cursive"
                    android:textSize="55sp"
                    android:textStyle="bold"
            />
            <Button
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu2"
                    android:background="@drawable/buttons"
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:onClick="buSelect"
                    android:fontFamily="cursive"
                    android:textSize="55sp"
                    android:textStyle="bold"
            />
            <Button
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu3"
                    android:background="@drawable/buttons"
                    android:layout_marginBottom="3pt"
                    android:layout_marginRight="3pt"
                    android:onClick="buSelect"
                    android:fontFamily="cursive"
                    android:textSize="55sp"
                    android:textStyle="bold"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
        >
            <Button
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu4"
                    android:background="@drawable/buttons"
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:onClick="buSelect"
                    android:fontFamily="cursive"
                    android:textSize="55sp"
                    android:textStyle="bold"
            />
            <Button
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu5"
                    android:background="@drawable/buttons"
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:onClick="buSelect"
                    android:fontFamily="cursive"
                    android:textSize="55sp"
                    android:textStyle="bold"
            />
            <Button
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu6"
                    android:background="@drawable/buttons"
                    android:layout_marginBottom="3pt"
                    android:layout_marginRight="3pt"
                    android:onClick="buSelect"
                    android:fontFamily="cursive"
                    android:textSize="55sp"
                    android:textStyle="bold"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
        >
            <Button
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu7"
                    android:background="@drawable/buttons"
                    android:layout_marginRight="3pt"
                    android:onClick="buSelect"
                    android:fontFamily="cursive"
                    android:textSize="55sp"
                    android:textStyle="bold"
            />
            <Button
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu8"
                    android:background="@drawable/buttons"
                    android:layout_marginRight="3pt"
                    android:onClick="buSelect"
                    android:fontFamily="cursive"
                    android:textSize="55sp"
                    android:textStyle="bold"
            />
            <Button
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu9"
                    android:background="@drawable/buttons"
                    android:layout_marginRight="3pt"
                    android:onClick="buSelect"
                    android:fontFamily="cursive"
                    android:textSize="55sp"
                    android:textStyle="bold"
            />


        </TableRow>


    </TableLayout>

    <TextView android:id="@+id/textResuletGame"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="winner Player1"
              android:layout_gravity="center"
              android:layout_marginTop="2dp"
              android:textAllCaps="false"
              android:textColor="@color/whait"
              android:textSize="25pt"
              android:fontFamily="casual"
              android:visibility="invisible"
    />

</LinearLayout>